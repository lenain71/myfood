            {
                lg.AppendLog(Log.CreateErrorLog("Exception on Clear Data and Settings", ex));
            }
            finally
            {
                lg.AppendLog(Log.CreateLog("Clear Data and Settings ended", LogType.Information));
            }
        };

        mesureBackgroundTask.Completed += handler;
