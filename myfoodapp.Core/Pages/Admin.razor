                lg.AppendLog(Log.CreateLog("Reset Calibration ended", LogType.Information));
            }
        };

        mesureBackgroundTask.Completed += handler;
        mesureBackgroundTask.Stop();

        StateHasChanged();
    }

    void ClearDataSettingsClick(MouseEventArgs args)
    {
